    </div>

<!-- Next and previous buttons -->
    <a class="prev" onclick="plusSlides(-1)">&#10094;</a>
    <a class="next" onclick="plusSlides(1)">&#10095;</a>

<!-- Image text -->
    <div class="caption-container">
        <p id="caption"></p>
    </div>

<!-- Thumbnail images -->
    <div class="row mx-auto">
        <div class="column">
            <img class="demo cursor" src="~/images/watch20.jpg" style="width:100%" onclick="currentSlide(1)" alt="Display Name">
        </div>

        <div class="column"> 
            <img class="demo cursor" src="~/images/watch17.jpg" style="width:100%" onclick="currentSlide(2)" alt="Display Name">
        </div>

        <div class="column">
            <img class="demo cursor" src="~/images/watch18.jpg" style="width:100%" onclick="currentSlide(3)" alt="Display Name">
        </div>

        <div class="column">
            <img class="demo cursor" src="~/images/watch19.jpg" style="width:100%" onclick="currentSlide(4)" alt="Display Name">
        </div>

        <div class="column">
            <img class="demo cursor" src="~/images/watch21.jpg" style="width:100%" onclick="currentSlide(5)" alt="Display Name">
        </div> 

        <div class="column">
            <img class="demo cursor" src="~/images/watch23.jpg" style="width:100%" onclick="currentSlide(6)" alt="Display Name">
        </div>
    </div>
</div>


<script>
    var slideIndex = 1;
    showSlides(slideIndex);

// Next/previous controls
    function plusSlides(n) {
    showSlides(slideIndex += n);
    }

// Thumbnail image controls
    function currentSlide(n) {
    showSlides(slideIndex = n);
    }

function showSlides(n) {
    var i;
    var slides = document.getElementsByClassName("mySlides");
    var dots = document.getElementsByClassName("demo");
    var captionText = document.getElementById("caption");
    if (n > slides.length) {slideIndex = 1}
    if (n < 1) {slideIndex = slides.length}
    
    for (i = 0; i < slides.length; i++) {
    slides[i].style.display = "none";
    }
    
    for (i = 0; i < dots.length; i++) {
    dots[i].className = dots[i].className.replace(" active", "");
    }
    slides[slideIndex-1].style.display = "block";
    dots[slideIndex-1].className += " active";
    captionText.innerHTML = dots[slideIndex-1].alt;
} 
</script>

<div class="container">
    @foreach ( var w in Model)
    {
        <div class="card watchcard">
            <div class="card-header">
                <a asp-action="ShowWatch" asp-controller="Home" asp-route-watchId="@w.WatchId">
                    <h3>@w.Name</h3>
                </a>
                <img src="~/images/@w.ImageUrl">
            </div>
            <div class="card-body">
                <h4>By @w.Company</h4>
                <h5>$@w.Price</h5>
                <p>@w.Description</p>
            </div>
            <div class="card-footer">
                <p>@w.Material</p>
                <p>@w.Gender</p>
                <p>@w.Size</p>
                <a asp-action="AddToCart" asp-controller="Home" asp-route-watchId="@w.WatchId">
                    <button type="submit" class="btn btn-small">Add to cart</button>
                </a>
            </div>
        </div>
    }
</div>

